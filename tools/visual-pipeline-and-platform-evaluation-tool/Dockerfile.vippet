FROM ghcr.io/open-edge-platform/edge-ai-libraries/intel/edge-ai-dlstreamer:v1.2.0-20250722-ubuntu24

USER root

RUN apt-get update && apt-get install --yes --no-install-recommends python3-venv gstreamer1.0-plugins-ugly

RUN \
    mkdir /python3venv && \
    chown -R dlstreamer: /python3venv && \
    chmod -R u+w /python3venv

USER dlstreamer

ENV GST_PLUGIN_PATH=$GST_PLUGIN_PATH/usr/lib/x86_64-linux-gnu/gstreamer-1.0/

WORKDIR /home/dlstreamer/vippet

ADD requirements.txt /home/dlstreamer/vippet/requirements.txt

RUN \
    python3 -m venv /python3venv && \
    /python3venv/bin/pip3 install --no-cache-dir --upgrade pip && \
    /python3venv/bin/pip3 install --no-cache-dir --no-dependencies -r requirements.txt

ADD app.py \
    app.css \
    optimize.py \
    pipeline.py \
    device.py \
    explore.py \
    benchmark.py \
    utils.py \
    /home/dlstreamer/vippet/

ADD pipelines/ /home/dlstreamer/vippet/pipelines

CMD ["python", "app.py"]
